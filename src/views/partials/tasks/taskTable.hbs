{{#if tasks}}
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>NÂ°</th>
        <th>Tourney</th>
        <th>Event</th>
        <th>Strategy</th>
        <th class="text-center">Stake</th>
        <th class="text-center">Cuota</th>
        <th class="text-center">Utility</th>
        <th>Operation</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td>{{tournament}}</td>
          <td>{{event}}</td>
          <td>{{strategy}}</td>
          <td>{{betAmount}}</td>
          <td>{{cuota}}</td>
          <td>{{Utility}}</td>
          <td>
            {{#if done}}
              <a
                class="btn btn-success"
                href="/tasks/{{_id}}/toggleDone"
              >Done</a>
            {{else}}
              <a class="btn btn-dark" href="/tasks/{{_id}}/toggleDone">
                Undone
              </a>
            {{/if}}
            <a href="/tasks/{{_id}}/delete" class="btn btn-danger">
              Delete
            </a>
            <a href="/tasks/{{_id}}/edit" class="btn btn-info">
              Edit
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <div class="h-100 d-flex align-items-center justify-content-center">
    <div class="text-center text-white">
      <h1>No tasks</h1>
      <img src="/icons/empty.svg" class="w-75" />
    </div>

  </div>
{{/if}}